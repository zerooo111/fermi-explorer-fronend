{
  "name": "@fermi/explorer-monorepo",
  "version": "1.0.0",
  "description": "Fermi Explorer - Blockchain data explorer for Continuum Sequencer",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.1.0",
  "scripts": {
    "dev": "bun run workspace ",
    "dev:backend": "bun workspace @fermi/backend run dev",
    "dev:frontend": "bun workspace @fermi/frontend run dev",
    "build": "bun run -w build",
    "build:backend": "bun workspace @fermi/backend run build",
    "build:frontend": "bun workspace @fermi/frontend run build",
    "typecheck": "bun run -w typecheck",
    "start": "./tools/scripts/start.sh",
    "install:all": "bun install"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "typescript": "^5.7.2",
    "@types/bun": "latest"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "keywords": [
    "blockchain",
    "explorer",
    "continuum",
    "sequencer",
    "monorepo",
    "bun",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/continuum/fermi-explorer-monorepo"
  },
  "license": "MIT",
  "author": "Continuum Team"
}
