{
  "name": "@fermi/explorer-monorepo",
  "version": "1.0.0",
  "description": "Fermi Explorer - Blockchain data explorer for Continuum Sequencer",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '@fermi/*' dev",
    "dev:backend": "bun run --filter '@fermi/backend' dev",
    "dev:frontend": "bun run --filter '@fermi/frontend' dev",
    "build": "bun run --filter '@fermi/*' build",
    "build:backend": "bun run --filter '@fermi/backend' build",
    "build:frontend": "bun run --filter '@fermi/frontend' build",
    "test": "bun run --filter '@fermi/*' test",
    "lint": "bun run --filter '@fermi/*' lint",
    "typecheck": "bun run --filter '@fermi/*' typecheck",
    "clean": "bun run --filter '@fermi/*' clean",
    "start": "./tools/scripts/start.sh",
    "install:all": "bun install",
    "format": "bun run --filter '@fermi/*' format"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "typescript": "^5.7.2"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "keywords": [
    "blockchain",
    "explorer",
    "continuum",
    "sequencer",
    "monorepo",
    "bun",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/continuum/fermi-explorer-monorepo"
  },
  "license": "MIT",
  "author": "Continuum Team"
}