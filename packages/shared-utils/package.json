{
  "name": "@fermi/shared-utils",
  "version": "1.0.0", 
  "description": "Shared utility functions for Fermi Explorer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "bn.js": "^5.2.2"
  },
  "devDependencies": {
    "@types/bn.js": "^5.2.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./formatters": {
      "types": "./dist/formatters.d.ts",
      "import": "./dist/formatters.js"
    },
    "./big-numbers": {
      "types": "./dist/big-numbers.d.ts",
      "import": "./dist/big-numbers.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "import": "./dist/validation.js"
    },
    "./constants": {
      "types": "./dist/constants.d.ts",
      "import": "./dist/constants.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "utils",
    "utilities",
    "formatters",
    "validation",
    "fermi-explorer"
  ]
}