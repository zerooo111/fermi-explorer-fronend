{
  "name": "@fermi/shared-types",
  "version": "1.0.0",
  "description": "Shared TypeScript types for Fermi Explorer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./api": {
      "types": "./dist/api.d.ts", 
      "import": "./dist/api.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "import": "./dist/validation.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "types",
    "typescript",
    "fermi-explorer"
  ]
}