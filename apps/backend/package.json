{
  "name": "@fermi/backend",
  "version": "1.0.0",
  "description": "Fermi Explorer Bun.js backend service",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/main.ts",
    "start": "bun run src/main.ts",
    "build": "rm -rf dist && bun build src/main.ts --outdir ./dist --target bun && cp -r proto dist/",
    "tick-streamer": "bun run src/tick-streamer-main.ts",
    "tick-streamer:dev": "bun run --watch src/tick-streamer-main.ts",
    "lint": "eslint src --ext .ts,.js",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:websocket": "bun run test-websocket.ts",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@fermi/config": "workspace:*",
    "@fermi/shared-types": "workspace:*",
    "@fermi/shared-utils": "workspace:*",
    "@grpc/grpc-js": "^1.12.5",
    "@grpc/proto-loader": "^0.7.15",
    "hono": "^4.7.10",
    "pg": "^8.13.1",
    "prom-client": "^15.1.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/pg": "^8.12.0",
    "@types/ws": "^8.5.13",
    "bun-types": "latest",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "bun",
    "backend",
    "grpc",
    "websocket",
    "fermi-explorer"
  ],
  "engines": {
    "bun": ">=1.0.0"
  }
}
