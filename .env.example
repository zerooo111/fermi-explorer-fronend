# Fermi Explorer Environment Configuration
# Copy this file to .env and update with your actual values
# WARNING: Never commit .env files with real secrets to version control

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Backend Configuration
BACKEND_PORT=3001
FRONTEND_PORT=3000

# Environment (development, staging, production)
NODE_ENV=development
GO_ENV=development

# =============================================================================
# SEQUENCER CONFIGURATION
# =============================================================================

# Option 1: Simple IP-based configuration (RECOMMENDED)
# Just specify the IP address (without http:// or https://), and the system will auto-build:
# - gRPC: {CONTINUUM_IP}:9090
# - REST: http://{CONTINUUM_IP}:8080/api/v1
# 
# Examples:
# - Development: localhost
# - Local network: 192.168.1.100
# - Production: your-sequencer.example.com
CONTINUUM_IP=localhost

# Option 2: Individual URLs (fallback for custom configurations)
# Use these if you need custom ports or protocols
# CONTINUUM_SEQUENCER_URL=localhost:9090
# CONTINUUM_REST_URL=http://localhost:8080/api/v1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Origins (comma-separated list)
# Development: http://localhost:3000,http://localhost:5173
# Production: https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3001

# Enable credentials in CORS (set to false in production unless needed)
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug logging
DEBUG=false

# Gin mode for Go backend (debug, release, test)
GIN_MODE=debug

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API URLs (used by frontend)
VITE_API_BASE=http://localhost:3001
VITE_ENABLE_LOGGING=false
VITE_ENABLE_DEV_TOOLS=false

# =============================================================================
# PRODUCTION NOTES
# =============================================================================
# For production deployment:
# 1. Set NODE_ENV=production and GO_ENV=production
# 2. Use HTTPS URLs for VITE_API_BASE and CORS_ALLOWED_ORIGINS
# 3. Set DEBUG=false and GIN_MODE=release
# 4. Use strong, unique values for any authentication secrets
# 5. Set CORS_ALLOW_CREDENTIALS=false unless specifically needed