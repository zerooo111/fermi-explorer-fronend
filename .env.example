# Fermi Explorer Environment Configuration
# Copy this file to .env.local and customize values as needed

# ===========================================
# API Configuration
# ===========================================

# Base URL for API requests
# Development: http://localhost:3001
# Production: https://api.yourdomain.com
VITE_API_BASE_URL=http://localhost:3001

# WebSocket URL for real-time connections
# Development: ws://localhost:3001/ws
# Production: wss://api.yourdomain.com/ws
VITE_WS_URL=ws://localhost:3001/ws

# ===========================================p
# Development Server Configuration  
# ===========================================

# Development server port
VITE_DEV_PORT=5173

# Preview server port (for production builds)
VITE_PREVIEW_PORT=4173

# Comma-separated list of allowed hosts for preview server
# Used for CORS and host validation
VITE_ALLOWED_HOSTS=localhost,127.0.0.1,explorer.fermilabs.xyz

# ===========================================
# Application Configuration
# ===========================================

# Request timeout in milliseconds
VITE_REQUEST_TIMEOUT=10000

# WebSocket reconnection attempts
VITE_WS_MAX_RECONNECT_ATTEMPTS=5

# WebSocket reconnection delay in milliseconds  
VITE_WS_RECONNECT_DELAY=3000

# Default cache time for React Query (in milliseconds)
VITE_DEFAULT_CACHE_TIME=300000

# Default stale time for React Query (in milliseconds)
VITE_DEFAULT_STALE_TIME=60000